.content{
  >li{
    list-style: none;
    margin: 10px;
    border-bottom: 1px solid #ccc;
    padding: 10px;
    color: #2aabd2;
    font-size: 16px;
    cursor: pointer;
  }
  button{
    border: none;
    background-color: #2aabd2;
    border-radius: 4px;
    color: #fff;
    font-size: 15px;
    padding: 2px 10px;
    margin-left: 10px;
    text-align: center;
  }
  button:hover{
    background-color: #1dced2;
  }
}